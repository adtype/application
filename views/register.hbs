
{{> header }}

<h1>Nueva Empresa</h1>

{{> show_flash_messages }}

<div class="row">
  <div class="col-md-6 lead">Registra tu nueva cuenta de empresa</div>
</div>

<div class="row">
  <div class="col-md-9">
    <form class="form-horizontal" action="/register" method="post">

      <div class="form-group">
        <label for="company_name_inp" class="col-md-2 control-label">Nombre de empresa</label>
        <div class="col-md-6">
          <input class="form-control" id="company_name_inp" placeholder="Company name" name="company_name" required>
        </div>
      </div>

      <div class="form-group">
        <label for="name_inp" class="col-md-2 control-label">Nombre</label>
        <div class="col-md-6">
          <input class="form-control" id="name_inp" placeholder="First name" name="name" required>
        </div>
      </div>

      <div class="form-group">
        <label for="lastname_inp" class="col-md-2 control-label">Apellidos</label>
        <div class="col-md-6">
          <input class="form-control" id="lastname_inp" placeholder="Last Name" name="lastname" required>
        </div>
      </div>

      <div class="form-group">
        <label for="email_inp" class="col-md-2 control-label">Correo Electrónico</label>
        <div class="col-md-6">
          <input class="form-control" id="email_inp" type="email" placeholder="Email" name="email" required>
        </div>
      </div>

      <div class="form-group">
        <label for="pass_inp" class="col-md-2 control-label">Contraseña</label>
        <div class="col-md-6">
          <input class="form-control" id="pass_inp" type="password" placeholder="Password" name="password" required>
        </div>
      </div>


      <div class="form-group">
        <label for="confirm_pass_inp" class="col-md-2 control-label">Confirmar Contraseña</label>
        <div class="col-md-6">
          <input class="form-control" id="confirm_pass_inp" type="password" placeholder="Password" name="password_confirmed" required>
        </div>
      </div>

      <div class="form-group">
        <label for="country_inp" class="col-md-2 control-label">País</label>
        <div class="col-md-6">
          <select class="form-control" id="country_inp" placeholder="Country name" name="country">
            {{#each countries}}
            <option value="{{@key}}" {{#if this.default }} selected="selected" {{/if}}>{{this.name}}</option>
            {{/each}}
            <option value="UK">Other</option>
          </select>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-2 col-md-6">
          <button id="submit_registration" type="submit" class="btn btn-success">Crear</button>
        </div>
      </div>

    </form>
  </div>

</div>

{{> footer }}
